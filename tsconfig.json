{
  "compilerOptions": {
    "lib": [
      "es6",
      "dom"
    ],
    "sourceMap": true,
    "resolveJsonModule": true,
    "target": "es2016",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "outDir": "dist",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
